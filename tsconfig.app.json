{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/pages/api/**/*",
    "scripts/**/*.ts",
    "scripts/**/*.js",
    "*.config.ts",
    "*.config.js"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
